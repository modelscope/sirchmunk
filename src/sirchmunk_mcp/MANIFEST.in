# Include documentation
include README.md
include BUILD.md
include LICENSE

# Include configuration templates
recursive-include config *.example *.json

# Include examples
recursive-include examples *.md *.json

# Include Python package files
recursive-include sirchmunk_mcp *.py

# Include tests
recursive-include tests *.py

# Exclude compiled files and caches
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
