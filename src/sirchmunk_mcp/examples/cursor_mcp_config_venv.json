{
  "_comment": "Example configuration for sirchmunk-mcp installed in a virtual environment",
  "_note": "Replace '/Users/you/.sirchmunk-env/bin/sirchmunk-mcp' with your actual virtual environment path",
  "mcpServers": {
    "sirchmunk": {
      "command": "/Users/you/.sirchmunk-env/bin/sirchmunk-mcp",
      "args": ["serve"],
      "env": {
        "LLM_API_KEY": "your-api-key",
        "LLM_BASE_URL": "https://api.openai.com/v1",
        "LLM_MODEL_NAME": "gpt-5.2",
        "SIRCHMUNK_WORK_PATH": "~/.sirchmunk",
        "SIRCHMUNK_ENABLE_CLUSTER_REUSE": "true",
        "CLUSTER_SIM_THRESHOLD": "0.85",
        "DEFAULT_MAX_DEPTH": "5",
        "DEFAULT_TOP_K_FILES": "3",
        "MCP_LOG_LEVEL": "INFO"
      }
    }
  }
}
